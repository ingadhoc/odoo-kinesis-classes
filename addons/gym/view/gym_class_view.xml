<!-- gym.gym_class -->
<!-- gym.gym_class -->
<!-- gym.gym_class -->
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_gym_gym_class_filter" model="ir.ui.view">
            <field name="name">gym.gym_class.select</field>
            <field name="model">gym.gym_class</field>
            <field name="arch" type="xml">
                <search string="Classes" version="7.0">
                    <group string="By Attribute">
                    <field name="date" string="Date"
                            />
                    </group>
                    <group string="By object">
                    <field name="trainer_id" string="Trainer"
                            />
                    <field name="schedule_id" string="Schedule"
                            />
                    <field name="activity_id" string="Activity"
                            />
                    <field name="gym_class_detail_ids" string="Class Detail"
                            />
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_gym_gym_class_form" model="ir.ui.view">
            <field name="name">gym.gym_class.form</field>
            <field name="model">gym.gym_class</field>
            <field name="arch" type="xml">
                <form string="Classes" version="7.0">
                    <header>
                    </header>
                    <sheet string="Classes">
                     <group>
                        <field name="date"
                            />
                    <field name="trainer_id"
                            />
                    <field name="schedule_id"
                            />
                    <field name="activity_id"
                            />
                    <field name="gym_class_detail_ids"
                            />
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_gym_gym_class_tree" model="ir.ui.view">
            <field name="name">gym.gym_class.tree</field>
            <field name="model">gym.gym_class</field>
            <field name="arch" type="xml">
                <tree string="Classes"
                    >
                    <field name="date"
                        />
                    <field name="trainer_id"
                        />
                    <field name="schedule_id"
                        />
                    <field name="activity_id"
                        />
                    <field name="gym_class_detail_ids"
                        />
                </tree>
            </field>
        </record>

    </data>
</openerp>
