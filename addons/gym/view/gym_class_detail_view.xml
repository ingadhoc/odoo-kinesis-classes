<!-- gym.gym_class_detail -->
<!-- gym.gym_class_detail -->
<!-- gym.gym_class_detail -->
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_gym_gym_class_detail_filter" model="ir.ui.view">
            <field name="name">gym.gym_class_detail.select</field>
            <field name="model">gym.gym_class_detail</field>
            <field name="arch" type="xml">
                <search string="Class Detail" version="7.0">
                    <group string="By Attribute">
                    </group>
                    <group string="By object">
                    <field name="trainee_id" string="Trainee"
                            />
                    <field name="gym_class_id" string="gym_class_id"
                            />
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_gym_gym_class_detail_form" model="ir.ui.view">
            <field name="name">gym.gym_class_detail.form</field>
            <field name="model">gym.gym_class_detail</field>
            <field name="arch" type="xml">
                <form string="Class Detail" version="7.0">
                    <header>
                    </header>
                    <sheet string="Class Detail">
                     <group>
                    <field name="trainee_id"
                            />
                    <field name="gym_class_id"
                            />
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_gym_gym_class_detail_tree" model="ir.ui.view">
            <field name="name">gym.gym_class_detail.tree</field>
            <field name="model">gym.gym_class_detail</field>
            <field name="arch" type="xml">
                <tree string="Class Detail"
                    >
                    <field name="value"
                            invisible="True"
                        />
                    <field name="trainee_id"
                        />
                </tree>
            </field>
        </record>

    </data>
</openerp>
